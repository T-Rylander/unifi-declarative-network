# Example environment for unifi-declarative-network
# Copy to .env and fill in values

# Hardware profile for validators: usg3p | uxg-pro | udm-se | udm-pro
HARDWARE_PROFILE=usg3p

# UniFi Controller connection
UNIFI_CONTROLLER_URL=https://unifi-controller.local:8443
UNIFI_USERNAME=changeme
UNIFI_PASSWORD=changeme
UNIFI_SITE=default

# Optional: verify SSL certs (true/false)
UNIFI_VERIFY_SSL=true
